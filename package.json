{
  "name": "prof-test",
  "version": "0.1.0",
  "description": "Cross-platform LaTeX test generator (prototype)",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsc -w",
    "electron:build": "tsc && electron .",
    "electron:dev": "concurrently \"tsc -w\" \"vite\"",
    "renderer:build": "vite build",
    "renderer:dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "echo \"No linter configured\" && exit 0"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.4",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "concurrently": "^9.2.1",
    "electron": "^26.0.0",
    "typescript": "^5.0.0",
    "vite": "^7.2.2",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}
