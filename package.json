{
  "name": "prof-test",
  "version": "0.1.0",
  "description": "Cross-platform LaTeX test generator (prototype)",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "tsc -w",
    "electron:build": "tsc && electron .",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "echo \"No linter configured\" && exit 0"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/node": "^24.10.1",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
